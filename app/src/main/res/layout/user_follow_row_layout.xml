<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/followers_image_avatar"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		android:src="@drawable/ic_food"
		app:civ_border_color="@color/purple_200"
		app:civ_border_overlay="true"
		app:civ_border_width="1.5dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	
	<TextView
		android:id="@+id/followers_text_username"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:text="RainbowWolfer"
		android:textSize="22sp"
		android:textStyle="normal"
		app:layout_constraintBottom_toBottomOf="@+id/followers_image_avatar"
		app:layout_constraintStart_toEndOf="@+id/followers_image_avatar"
		app:layout_constraintTop_toTopOf="@+id/followers_image_avatar"/>
	
	<com.google.android.material.button.MaterialButton
		android:id="@+id/followers_follow_button"
		android:layout_width="40dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:paddingStart="23dp"
		app:icon="@drawable/ic_baseline_favorite_border_24"
		app:iconGravity="textStart"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>