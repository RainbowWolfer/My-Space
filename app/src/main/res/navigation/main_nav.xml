<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/mobile_navigation"
	app:startDestination="@+id/item_home">
	
	<fragment
		android:id="@+id/item_home"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.home.HomeFragment"
		android:label="@string/home"
		tools:layout="@layout/fragment_home">
		<action
			android:id="@+id/action_item_home_to_userFragment"
			app:destination="@id/userFragment"
			app:enterAnim="@anim/from_right"
			app:exitAnim="@anim/to_left"
			app:popEnterAnim="@anim/from_left"
			app:popExitAnim="@anim/to_right"/>
		<action
			android:id="@+id/action_item_home_to_postDetailFragment"
			app:destination="@id/postDetailFragment"
			app:enterAnim="@anim/from_right"
			app:exitAnim="@anim/to_left"
			app:popEnterAnim="@anim/from_left"
			app:popExitAnim="@anim/to_right"/>
	</fragment>
	<fragment
		android:id="@+id/userFragment"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.user.UserFragment"
		android:label="@string/user">
		<argument
			android:name="user_id"
			app:argType="string"/>
	</fragment>
	<fragment
		android:id="@+id/item_user_profile"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.user.UserFragment"
		android:label="@string/user">
		<argument
			android:name="user_id"
			app:argType="string"/>
	</fragment>
	<fragment
		android:id="@+id/postDetailFragment"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.home.postDetail.PostDetailFragment"
		android:label="@string/post"
		tools:layout="@layout/fragment_post_detail">
		<argument
			android:name="post_id"
			app:argType="string"/>
	</fragment>
	<fragment
		android:id="@+id/postDetailFragment2"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.home.postDetail.PostDetailFragment"
		android:label="@string/post"
		tools:layout="@layout/fragment_post_detail">
		<argument
			android:name="post_id"
			app:argType="string"/>
	</fragment>
	<fragment
		android:id="@+id/item_post_detail"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.home.postDetail.PostDetailFragment"
		android:label="@string/post"
		tools:layout="@layout/fragment_post_detail">
		<argument
			android:name="post_id"
			app:argType="string"/>
	</fragment>
	<fragment
		android:id="@+id/nav_settings"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.settings.SettingsFragment"
		android:label="@string/settings"/>
	<fragment
		android:id="@+id/nav_about"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.about.AboutFragment"
		android:label="@string/about"
		tools:layout="@layout/fragment_about"/>
	<fragment
		android:id="@+id/nav_collection"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.collections.CollectionFragment"
		android:label="@string/collection"
		tools:layout="@layout/fragment_collection">
		<action
			android:id="@+id/action_nav_collection_to_postDetailFragment2"
			app:destination="@id/postDetailFragment2"
			app:enterAnim="@anim/from_right"
			app:exitAnim="@anim/to_left"
			app:popEnterAnim="@anim/from_left"
			app:popExitAnim="@anim/to_right"/>
	</fragment>
	
	<fragment
		android:id="@+id/nav_detailMessage"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.message.MessageDetailFragment"
		tools:layout="@layout/fragment_message_detail"/>
	<fragment
		android:id="@+id/nav_message"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.message.MessageFragment"
		android:label="@string/message"
		tools:layout="@layout/fragment_message">
		<action
			android:id="@+id/action_nav_message_to_nav_detailMessage"
			app:destination="@id/nav_detailMessage"
			app:enterAnim="@anim/from_right"
			app:exitAnim="@anim/to_left"
			app:popEnterAnim="@anim/from_left"
			app:popExitAnim="@anim/to_right"/>
	</fragment>
	
	<fragment
		android:id="@+id/nav_profile"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.user.UserFragment"
		android:label="@string/profile"/>
	<fragment
		android:id="@+id/sub_nav_profile"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.user.UserFragment"
		android:label="@string/profile"/>
	<fragment
		android:id="@+id/nav_drafts"
		android:name="com.rainbowwolfer.myspacedemo1.ui.fragments.main.drafts.DraftsFragment"
		android:label="@string/drafts"
		tools:layout="@layout/fragment_drafts"/>

</navigation>